{
  "description": "Plugin hooks for tool validation and workflow enforcement",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/bouncer.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "WebSearch|WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/agent-browser-solo.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
